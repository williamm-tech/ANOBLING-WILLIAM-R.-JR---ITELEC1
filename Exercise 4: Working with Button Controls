package com.example.buttons

import android.os.Bundle
import android.widget.Button
import android.widget.EditText
import android.widget.Toast
import androidx.appcompat.app.AppCompatActivity

class MainActivity : AppCompatActivity() {

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)

        
        val firstNum = findViewById<EditText>(R.id.firstNum)
        val secNum = findViewById<EditText>(R.id.secondNum)
        val btnAdd = findViewById<Button>(R.id.addBtn)

        
        btnAdd.setOnClickListener {
            val num1Text = firstNum.text.toString()
            val num2Text = secNum.text.toString()

            if (num1Text.isEmpty() || num2Text.isEmpty()) {
                Toast.makeText(this, "Please fill all the fields", Toast.LENGTH_SHORT).show()
            } else {
                val num1 = num1Text.toInt()
                val num2 = num2Text.toInt()
                val sum = num1 + num2

                
                Toast.makeText(this, "First Num: $num1, Second Num: $num2, SUM = $sum", Toast.LENGTH_LONG).show()
            }
        }
    }





//activity_main.xml


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
