//summary.kt


package com.example.foodorderapp   

import android.content.Intent
import android.os.Bundle
import android.widget.Button
import android.widget.TextView
import androidx.appcompat.app.AppCompatActivity

class Summary : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.summary)

        val tvFood = findViewById<TextView>(R.id.tvFood)
        val tvQuantity = findViewById<TextView>(R.id.tvQuantity)
        val tvTotal = findViewById<TextView>(R.id.tvTotal)
        val btnBack = findViewById<Button>(R.id.btnBack)

        
        val food = intent.getStringExtra("food")
        val quantity = intent.getIntExtra("quantity", 0)
        val total = intent.getDoubleExtra("total", 0.0)

        tvFood.text = "Food: $food"
        tvQuantity.text = "Quantity: $quantity"
        tvTotal.text = "Total: â‚±$total"

        btnBack.setOnClickListener {
            val intent = Intent(this, Order::class.java)
            startActivity(intent)
            finish()
        }
    }
}




