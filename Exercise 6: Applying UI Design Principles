//order.kt

package com.example.foodorderapp

import android.content.Intent
import android.os.Bundle
import android.widget.*
import androidx.appcompat.app.AppCompatActivity

class Order : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.order) // your XML file

        val spinner = findViewById<Spinner>(R.id.spinnerFood)
        val etQuantity = findViewById<EditText>(R.id.etQuantity)
        val btnPlaceOrder = findViewById<Button>(R.id.btnPlaceOrder) // match XML

        
        val foods = arrayOf("Burger", "Pizza", "Fries", "Pasta")
        val adapter = ArrayAdapter(this, android.R.layout.simple_spinner_item, foods)
        adapter.setDropDownViewResource(android.R.layout.simple_spinner_dropdown_item)
        spinner.adapter = adapter

        btnPlaceOrder.setOnClickListener {
            val selectedFood = spinner.selectedItem.toString()
            val quantity = etQuantity.text.toString().toIntOrNull()

            if (quantity == null || quantity <= 0) {
                Toast.makeText(this, "Enter a valid quantity", Toast.LENGTH_SHORT).show()
                return@setOnClickListener
            }

            
            val price = when (selectedFood) {
                "Burger" -> 80.0
                "Pizza" -> 120.0
                "Fries" -> 50.0
                "Pasta" -> 100.0
                else -> 0.0
            }

            val total = price * quantity

            
            val intent = Intent(this, Summary::class.java)
            intent.putExtra("food", selectedFood)
            intent.putExtra("quantity", quantity)
            intent.putExtra("total", total)
            startActivity(intent)
        }
    }
}







